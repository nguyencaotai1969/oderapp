<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="right"
                android:src="@drawable/newicon"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgproduct_suggestion"
                    android:src="@drawable/noimage"
                    android:layout_width="110dp"
                    android:layout_height="110dp">
                </ImageView>
                <TextView
                    android:id="@+id/txtproduct_suggestion_name"
                    android:textSize="15sp"
                    android:textColor="#FF0D0D"
                    android:text="Ten Product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/txtproduct_suggestion_price"
                    android:textSize="13sp"
                    android:textColor="@color/cardview_dark_background"
                    android:text="Gia San Pham"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>