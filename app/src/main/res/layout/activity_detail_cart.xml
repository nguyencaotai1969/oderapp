<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="12"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailCartActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_weight="1"
        android:id="@+id/toolbarCart"
        android:layout_width="match_parent"
        android:background="#00FFFFFF"
        android:layout_height="?actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_weight="11"
        android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgAvatarCart"
            android:src="@drawable/noimage"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtvNameCart"
                android:text="Tên sản phẩm"
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#FB2010"
                android:textSize="20dp"
                android:id="@+id/txtvPriceCart"
                android:text="Giá sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtvDescriptionCart"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Chi tiết sản phẩm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_weight="1"
        android:id="@+id/button_navication_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemIconTint="@color/tabitem"
        app:itemTextColor="@color/tabitem">
        <LinearLayout
            android:weightSum="11"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:src="@drawable/chatngay"
                android:layout_width="0dp"
                android:layout_height="40dp"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/btnAddCart"
                android:layout_weight="4"
                android:src="@drawable/themvaogiohang"
                android:layout_width="0dp"
                android:layout_height="60dp"/>
            <Button
                android:layout_marginLeft="10dp"
                android:backgroundTint="#9EFF0000"
                android:layout_weight="4"
                android:id="@+id/btnAddMuaCart"
                android:text="Mua ngay"
                android:layout_width="wrap_content"
                android:layout_height="60dp"/>

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>